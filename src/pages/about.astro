---
import '../styles/global.css'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro';

const pageTitle = 'About me';

const identity = {
  name: 'Tom',
  role: 'frontend developer',
  country: 'United Kingdom',
  hobbies: ['coding', 'gaming', 'eating'],
};

const skills = ['HTML', 'CSS', 'TypeScript', 'JavaScript', 'React', 'Angular'];
const skillColour = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
    <style define:vars={{skillColour, fontWeight, textCase}}>
      h1 {
        color: purple;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColour);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
	</head>
	<body>
    <Navigation />
		<h1>{pageTitle}</h1>
    <p>I'm a frontend developer, and I'm currently looking for work <bold>HIRE ME!</bold></p>
    <p>Here are some of my skills:</p>
    <ul>
      {skills.map(skill => (<li class="skill">{skill}</li>))}
    </ul>
    <p>I live in {identity.country} and work as a {identity.role}</p>
    <Footer />
	</body>
</html>
